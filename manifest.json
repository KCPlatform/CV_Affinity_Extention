{
  "manifest_version": 3,
  "name": "Beta Kapor.ai <> Affinity Report Linker",
  "version": "1.0.1",
  "description": "Appends a new link to company pages on Affinity",
  "permissions": ["activeTab"],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://*.kapor.ai"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.affinity.co/*"
      ],
      "js": ["content.js", "config.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["templates/proxy.html", "templates/panel.html", "icon-128.png", "templates/proxy.js"],
      "matches": ["<all_urls>"]
    }
  ]
}