{
  "manifest_version": 3,
  "name": "Beta Kapor.ai Sidekick",
  "version": "1.0.5",
  "description": "Get Kapor.ai reports displayed directly on your Affinity or in Google Sheets!",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://*.kapor.ai"
  },
  "permissions": [
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/"
  ],
  "oauth2": {
    "client_id": "__CLIENT_ID__",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets.readonly",
      "https://www.googleapis.com/auth/spreadsheets.currentonly"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.affinity.co/*",
        "https://docs.google.com/spreadsheets/*"
      ],
      "js": [
        "constants.js",
        "utils.js",
        "cache.js",
        "events.js",
        "googleSheets.js",
        "affinity.js",
        "process.js",
        "ui.js",
        "main.js",
        "content.js",
        "config.js"
      ],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "templates/proxy.html", "templates/panel.html", "icon-128.png", "templates/proxy.js"],
      "matches": [
        "https://*.affinity.co/*",
        "https://docs.google.com/*"
      ]
    }
  ]
}